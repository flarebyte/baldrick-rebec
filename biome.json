{
  "$schema": "https://biomejs.dev/schemas/1.7.0/schema.json",
  "files": {
    "include": ["script/*.mjs"],
    "ignore": ["**/node_modules/**", "**/.git/**"]
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "useBlockStatements": "error",
        "useConst": "warn",
        "noUselessElse": "warn"
      },
      "suspicious": {
        "noConsole": "off"
      }
    }
  }
}

